{
  "mcpServers": {
    "harmony": {
      "command": "pnpm",
      "args": ["run", "mcp:stdio"],
      "env": {
        "TEMPORAL_ADDRESS": "localhost:7233",
        "TEMPORAL_NAMESPACE": "default",
        "TEMPORAL_TASK_QUEUE": "golden-tools",
        "TEMPORAL_UI_URL": "http://localhost:8233",
        "MCP_INCLUDE_BLUEPRINTS": "true",
        "MCP_USE_ENV_DEFAULTS": "true"
      }
    }
  }
}
