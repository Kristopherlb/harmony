{
  "$schema": "https://json-schema.org/draft-07/schema",
  "cli": "nx",
  "title": "Capability generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "kebab-case capability name (e.g., jira-get-issue)"
    },
    "domain": {
      "type": "string",
      "description": "Discovery taxonomy domain (CDM-001) (e.g., security, observability, ci, k8s)"
    },
    "subdomain": {
      "type": "string",
      "description": "Optional discovery taxonomy subdomain (CDM-001) (e.g., oauth, grafana)"
    },
    "pattern": {
      "type": "string",
      "description": "Capability pattern",
      "enum": ["connector", "transformer", "commander"]
    },
    "classification": {
      "type": "string",
      "description": "OCS data classification",
      "enum": ["PUBLIC", "INTERNAL", "CONFIDENTIAL", "RESTRICTED"]
    }
  },
  "required": ["name", "domain", "pattern", "classification"],
  "additionalProperties": false
}

