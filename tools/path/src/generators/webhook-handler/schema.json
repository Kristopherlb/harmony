{
  "$schema": "https://json-schema.org/draft-07/schema",
  "cli": "nx",
  "title": "Webhook handler generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Handler name (kebab-case) (e.g., github-webhook)"
    },
    "source": {
      "type": "string",
      "description": "Webhook source (used to pick default verification pattern)",
      "enum": ["slack", "github", "gitlab", "pagerduty", "custom"]
    },
    "signatureHeader": {
      "type": "string",
      "description": "Header containing signature/token (lowercase recommended)"
    },
    "signatureAlgorithm": {
      "type": "string",
      "description": "Signature algorithm",
      "default": "sha256"
    }
  },
  "required": ["name", "source"],
  "additionalProperties": false
}

