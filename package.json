{
  "name": "golden-path",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "start": "nx serve",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "generate:github:introspection": "node tools/scripts/generate-github-introspection.mjs",
    "dev:demo:json": "sh -c 'pnpm nx run mcp-server:build 1>&2 && node packages/tools/mcp-server/dist/src/demo/run-demo.js --temporal \"$@\"' --",
    "dev:demo:json:local": "sh -c 'pnpm nx run mcp-server:build 1>&2 && node packages/tools/mcp-server/dist/src/demo/run-demo.js --local \"$@\"' --"
  },
  "devDependencies": {
    "@golden/path": "workspace:*",
    "@nx/devkit": "18.0.0",
    "@nx/eslint": "18.0.0",
    "@nx/eslint-plugin": "18.0.0",
    "@nx/js": "18.0.0",
    "@nx/linter": "18.0.0",
    "@nx/vite": "18.0.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "9.0.0",
    "graphql": "^16.12.0",
    "nx": "18.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.3.0",
    "vitest": "^1.2.0"
  }
}
