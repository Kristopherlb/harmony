{
  "name": "golden-path",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "start": "nx serve",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "nx:test:debug": "node tools/scripts/nx-test-debug.mjs",
    "tools:regen-sync": "node tools/scripts/regen-tool-catalog-and-sync.mjs",
    "skills:verify": "node tools/scripts/cursor-skills.mjs verify",
    "skills:verify:vendored": "node tools/scripts/cursor-skills.mjs verify --vendored-only",
    "skills:install": "node tools/scripts/cursor-skills.mjs install",
    "test:path:debug": "pnpm --dir tools/path exec vitest run --reporter=verbose",
    "test:capabilities:debug": "pnpm --dir packages/capabilities exec vitest run --reporter=verbose",
    "dev:console": "nx run console:serve",
    "dev:console:restart": "node tools/scripts/restart-console-dev.mjs",
    "lint": "nx run-many -t lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "generate:github:introspection": "node tools/scripts/generate-github-introspection.mjs",
    "dev:demo:json": "sh -c 'pnpm nx run mcp-server:build 1>&2 && node packages/tools/mcp-server/dist/src/demo/run-demo.js --temporal \"$@\"' --",
    "dev:demo:json:local": "sh -c 'pnpm nx run mcp-server:build 1>&2 && node packages/tools/mcp-server/dist/src/demo/run-demo.js --local \"$@\"' --"
  },
  "devDependencies": {
    "@golden/path": "workspace:*",
    "@nx/devkit": "18.0.0",
    "@nx/eslint": "18.0.0",
    "@nx/eslint-plugin": "18.0.0",
    "@nx/js": "18.0.0",
    "@nx/linter": "18.0.0",
    "@nx/vite": "18.0.0",
    "@nx/web": "18.0.0",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.0.4",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "9.0.0",
    "graphql": "^16.12.0",
    "nx": "18.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {}
}
